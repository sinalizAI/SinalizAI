<DetectionScreen>:
    name: 'detection'
    

    FloatLayout:
        id: camera_display
        size: root.size
        pos: root.pos
        

        MDLabel:
            id: status_label
            text: ""
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"x": 0.05, "y": 0.05}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 0.7
            font_size: "14sp"
            

        MDLabel:
            id: detection_result
            text: ""
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.5, "top": 0.85}
            theme_text_color: "Custom"
            text_color: 0, 1, 0, 1
            font_size: "32sp"
            bold: True
            halign: "center"


    RelativeLayout:
        size: root.size
        pos: root.pos
        
        Button:
            id: close_button
            text: "X"
            size_hint: None, None
            size: "60dp", "60dp"
            pos_hint: {"right": 0.95, "top": 0.95}
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1
            font_size: "24sp"
            bold: True

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: (self.x, self.y, self.width, self.height)
                    width: 2
            on_release: root.go_back()