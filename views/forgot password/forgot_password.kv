<ForgotScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.95, None  
            height: self.minimum_height
            spacing: "40dp"
            pos_hint: {"center_x": 0.5, "top": 1}
            padding: ["10dp", "50dp", "10dp", "10dp"]

            MDLabel:
                text: "Esqueceu a senha?"
                font_size: "24sp"
                theme_text_color: "Custom"
                text_color: 0.72, 0.78, 0.92, 1  
                font_name: "C:\\frontend\\assets\\fonts\\Palanquin_Dark\\PalanquinDark-Regular.ttf"
                size_hint_x: 1
                height: self.texture_size[1]
                halign: 'left'
                valign: 'center'
                text_size: self.width, None
                pos_hint: {"top": 0.9}
                size_hint_y: None  
                height: "50dp" 

            MDLabel:
                text: "Insira o seu e-mail e receba um link para redefini-la."
                font_size: "16sp"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                size_hint_x: 1
                height: self.texture_size[1]
                halign: 'left'
                valign: 'center'
                text_size: self.width, None
                pos_hint: {"center_x": 0.5}

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: 12
                padding: "20dp"

                MDLabel:
                    text: "E-MAIL"
                    font_size: "14sp"
                    theme_text_color: "Custom"
                    text_color: 0.72, 0.78, 0.92, 1 
                    bold: True
                    font_name: "C:\\frontend\\assets\\fonts\\Palanquin_Dark\\PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {"x": 0.010}

                MDTextField:
                    id: forgor_input
                    hint_text: "Digite seu e-mail"
                    font_size: "10sp"
                    mode: "rectangle"
                    line_color_normal: 0, 0, 0, 1  
                    line_color_focus: 0, 0, 0, 1  
                    text_color: 0, 0, 0, 1  
                    hint_text_color: 0.4, 0.4, 0.4, 1  
                    font_name: "C:/frontend/assets/fonts/palanquin/palanquin-regular.ttf"
                    pos_hint: {"x": 0}  
                    size_hint_x: 1  
                    height: "50dp"  
                    radius: [25, 25, 25, 25]  

            Widget:
                size_hint_y: None
                height: "20dp"

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "10dp"
                padding: "20dp"

                MDFillRoundFlatButton:
                    id: Cont_button
                    text: "Continuar"
                    size_hint_x: 1
                    height: "50dp"  
                    md_bg_color: 0.788, 0.835, 0.941, 1 
                    font_name: "C:/frontend/assets/fonts/palanquin/palanquin-regular.ttf"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    elevation: 4  
                    line_color: 0.6, 0.7, 0.9, 1 
                    line_width: 1 

                MDFillRoundFlatButton:
                    id: voltar_button  
                    text: "Voltar"
                    size_hint_x: 1
                    height: "50dp"  
                    md_bg_color: 1, 1, 1, 1  
                    font_name: "C:/frontend/assets/fonts/palanquin/palanquin-regular.ttf"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    elevation: 4  
                    line_color: 0.8, 0.8, 0.8, 1 
                    line_width: 1  