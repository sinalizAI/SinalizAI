<RegisterScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDTopAppBar:
            id: top_app_bar
            md_bg_color: 0.718, 0.780, 0.922, 1
            pos_hint: {"top": 1}
            elevation: 0
            size_hint_y: None
            height: "56dp"
            title: "[b][font=views/assets/fonts/PT_Serif/PTSerif-Bold.ttf][color=#000000][size=30]Sinaliz[/size][/color][/font] [font=views/assets/fonts/PT_Serif/PTSerif-Regular.ttf][color=#FFFFFF][size=30]AI[/size][/color][/font][/b]"
            specific_text_color: 1, 1, 1, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, None
            height: self.minimum_height
            spacing: "10dp"
            pos_hint: {"center_x": 0.5, "top": 1 - (top_app_bar.height / root.height)}
            padding: "10dp"

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: self.minimum_size
                spacing: 8
                pos_hint: {"center_x": 0.5}

                MDIcon:
                    icon: "card-account-details-outline"
                    size_hint: None, None
                    size: 100,100
                    pos_hint: {"center_y": 0.5}
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1

                MDLabel:
                    text: "Vamos Come√ßar!"
                    font_size: "25"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint: None, None
                    width: self.texture_size[0]
                    height: self.texture_size[1]
                    halign: 'left'
                    valign: 'center'
                    text_size: None, None
                    pos_hint: {"center_y": 0.5}

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "1dp"
                padding: "4dp"

                MDLabel:
                    text: "Nome Completo"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: name_input
                    hint_text: "Digite seu nome"
                    hint_text_align: "center"
                    font_size: "9sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "30dp"
                    radius: [12, 12, 12, 12]

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "1dp"
                padding: "4dp"

                MDLabel:
                    text: "E-mail"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: email_input
                    hint_text: "Digite seu e-mail"
                    hint_text_align: "center"
                    font_size: "9sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "30dp"
                    radius: [12, 12, 12, 12]

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "1dp"
                padding: "4dp"

                MDLabel:
                    text: "Senha"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: password_input
                    hint_text: "Digite sua senha"
                    hint_text_align: "center"
                    font_size: "9sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "30dp"
                    radius: [12, 12, 12, 12]
                    password: True

                MDLabel:
                    text: "A senha deve ter de 6 a 14 caracteres"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0.5, 0.5, 0.5, 1
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: ["3dp", 0, 0, 0]

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "1dp"
                padding: "1dp"

                MDLabel:
                    text: "Confirme a senha"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: confirm_password_input
                    hint_text: "Confirme sua senha"
                    hint_text_align: "center"
                    font_size: "9sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "30dp"
                    radius: [12, 12, 12, 12]
                    password: True

            Widget:
                size_hint_y: 0.1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: "90dp"
                spacing: "7dp"
                padding: [0, 0, 0, "5dp"]
                pos_hint: {"center_y": 0.4}

                MDFillRoundFlatButton:
                    id: create_button
                    text: "Criar Conta"
                    size_hint_x: 1
                    height: "40dp"
                    md_bg_color: 0.788, 0.835, 0.941, 1
                    font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    elevation: 4
                    radius: [12, 12]
                    line_color: 0.6, 0.7, 0.9, 1 
                    line_width: 1
                    on_release: root.do_register(root.ids.email_input.text, root.ids.password_input.text, root.ids.confirm_password_input.text, root.ids.name_input.text)

                MDFillRoundFlatButton:
                    id: Back_button
                    text: "Voltar"
                    size_hint_x: 1
                    height: "40dp"
                    md_bg_color: 1, 1, 1, 1
                    font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    elevation: 4
                    line_color: 0.8, 0.8, 0.8, 1
                    line_width: 1
                    radius: [12, 12]
                    on_release: root.go_to_welcome()
