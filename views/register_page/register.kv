<RegisterScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDTopAppBar:
            id: top_app_bar
            md_bg_color: 0.718, 0.780, 0.922, 1
            pos_hint: {"top": 1}
            elevation: 0
            size_hint_y: None
            height: "56dp"
            title: "[b][font=assets/fonts/PT_Serif/PTSerif-Bold.ttf][color=#000000][size=70]Sinaliz[/size][/color][/font] [font=assets/fonts/PT_Serif/PTSerif-Regular.ttf][color=#FFFFFF][size=70]AI[/size][/color][/font][/b]"
            specific_text_color: 1, 1, 1, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, None
            height: self.minimum_height
            spacing: "10dp"
            pos_hint: {"center_x": 0.5, "top": 1 - (top_app_bar.height / root.height)}
            padding: "10dp"

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: self.minimum_size
                spacing: 8
                pos_hint: {"center_x": 0.5}

                MDIcon:
                    icon: "card-account-details-outline"
                    size_hint: None, None
                    size: dp(60), dp(60)   
                    pos_hint: {"center_y": 0.5}
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1

                MDLabel:
                    text: "Vamos Come√ßar!"
                    font_size: "22sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    font_name: "assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_x: None
                    width: self.texture_size[0]
                    halign: "left"
                    valign: "center"
                    text_size: None, None
                    pos_hint: {"center_y": 0.5}

            MDBoxLayout:
                orientation: "vertical"
                spacing: "8dp"
                size_hint_y: None
                height: self.minimum_height

                MDLabel:
                    text: "Nome Completo"
                    font_size: "16sp"
                    bold: True
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: name_input
                    hint_text: "Digite seu nome"
                    font_size: "18sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "55dp"
                    radius: [12, 12, 12, 12]

                MDLabel:
                    text: "E-mail"
                    font_size: "16sp"
                    bold: True
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: email_input
                    hint_text: "Digite seu e-mail"
                    font_size: "18sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "55dp"
                    radius: [12, 12, 12, 12]

                MDLabel:
                    text: "Senha"
                    font_size: "16sp"
                    bold: True
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: password_input
                    hint_text: "Digite sua senha"
                    font_size: "18sp"
                    mode: "rectangle"
                    password: True
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "55dp"
                    radius: [12, 12, 12, 12]

                MDLabel:
                    text: "A senha deve ter de 8 a 14 caracteres"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0.5, 0.5, 0.5, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "Confirme a senha"
                    font_size: "16sp"
                    bold: True
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: confirm_password_input
                    hint_text: "Confirme sua senha"
                    font_size: "18sp"
                    mode: "rectangle"
                    password: True
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "55dp"
                    radius: [12, 12, 12, 12]

            Widget:
                size_hint_y: 0.15 

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.9
            size_hint_y: None
            height: dp(120)
            spacing: "10dp"
            pos_hint: {"center_x": 0.5, "y": 0.01} 

            MDFillRoundFlatButton:
                id: create_button
                text: "[b]Criar conta[/b]"
                markup: True
                size_hint_x: 1
                height: "50dp"
                md_bg_color: 0.717, 0.780, 0.922, 1
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                elevation: 7
                radius: [12, 12]
                on_release: root.do_register(root.ids.email_input.text, root.ids.password_input.text, root.ids.confirm_password_input.text, root.ids.name_input.text)

            MDFillRoundFlatButton:
                id: Back_button
                text: "[b]Voltar[/b]"
                markup: True
                size_hint_x: 1
                height: "50dp"
                md_bg_color: 1, 1, 1, 1
                theme_text_color: "Custom"
                text_color: 0.717, 0.780, 0.922, 1
                elevation: 7
                line_color: 0.717, 0.780, 0.922, 1
                line_width: 1
                radius: [12, 12]
                on_release: root.go_to_welcome()
