<HomeScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDTopAppBar:
            id: toolbar
            md_bg_color: 0.718, 0.780, 0.922, 1
            pos_hint: {"top": 1}
            size_hint_y: None
            height: "56dp"
            elevation: 0
            title: "[font=assets/fonts/PT_Serif/PTSerif-Bold.ttf][color=#000000][size=70]Sinaliz[/size][/color][/font] [font=assets/fonts/PT_Serif/PTSerif-Regular.ttf][color=#FFFFFF][size=70]AI[/size][/color][/font]"
            specific_text_color: 0, 0, 0, 1

        MDScrollView:
            size_hint: 1, None
            height: root.height - dp(126)  
            pos_hint: {"top": 0.88, "center_x": 0.5}  
            do_scroll_x: False
            bar_width: dp(4)
            bar_color: 0.788, 0.835, 0.941, 1

            MDBoxLayout:
                id: content_container
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "20dp"
                spacing: "20dp"
                pos_hint: {"center_x": 0.5}

                MDCard:
                    id: card_traduzir
                    size_hint: 0.9, None
                    height: "140dp"
                    pos_hint: {"center_x": 0.5}
                    elevation: 0
                    radius: [15]
                    md_bg_color: 0.965, 0.972, 0.996, 1
                    line_color: 0.788, 0.835, 0.941, 1
                    line_width: "1dp"

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: "12dp"
                        spacing: "8dp"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        size_hint_y: None
                        height: self.minimum_height

                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint: None, None
                            size: self.minimum_size
                            spacing: 8
                            pos_hint: {"center_x": 0.5}

                            MDIcon:
                                icon: "gesture"
                                size_hint: None, None
                                size: "24dp", "24dp"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                pos_hint: {"center_y": 0.5}

                            MDBoxLayout:
                                orientation: "vertical"
                                size_hint: None, None
                                size: self.minimum_size
                                spacing: -5
                                pos_hint: {"center_y": 0.5}

                                MDLabel:
                                    text: "Traduzir Sinais"
                                    font_name: "assets/fonts/palanquin/palanquindark-regular.ttf"
                                    font_size: "18sp"
                                    theme_text_color: "Custom"
                                    text_color: 0, 0, 0, 1
                                    size_hint: None, None
                                    width: self.texture_size[0]
                                    height: self.texture_size[1]
                                    halign: "left"
                                    valign: "center"
                                    text_size: None, None

                                MDLabel:
                                    text: "Gravar e traduzir"
                                    font_name: "assets/fonts/palanquin/palanquin-semibold.ttf"
                                    font_size: "12sp"
                                    theme_text_color: "Custom"
                                    text_color: 0, 0, 0, 1
                                    size_hint: None, None
                                    width: self.texture_size[0]
                                    height: self.texture_size[1]
                                    halign: "left"
                                    valign: "center"
                                    text_size: None, None
                                    padding_x: "10dp"

                        MDLabel:
                            text: "Utilize a câmera para traduzir Libras para português instantaneamente."
                            font_name: "assets/fonts/palanquin/palanquin-medium.ttf"
                            font_size: "14sp"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                            halign: "center"
                            pos_hint: {"center_x": 0.5}

                MDCard:
                    id: card_video
                    size_hint: 0.9, None
                    height: "140dp"
                    pos_hint: {"center_x": 0.5}
                    elevation: 0
                    radius: [15]
                    md_bg_color: 0.965, 0.972, 0.996, 1
                    line_color: 0.788, 0.835, 0.941, 1
                    line_width: "1dp"

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: "12dp"
                        spacing: "8dp"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        size_hint_y: None
                        height: self.minimum_height

                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint: None, None
                            size: self.minimum_size
                            spacing: 8
                            pos_hint: {"center_x": 0.5}

                            MDIcon:
                                icon: "video"
                                size_hint: None, None
                                size: "24dp", "24dp"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                pos_hint: {"center_y": 0.5}

                            MDBoxLayout:
                                orientation: "vertical"
                                size_hint: None, None
                                size: self.minimum_size
                                spacing: -5
                                pos_hint: {"center_y": 0.5}

                                MDLabel:
                                    text: "Traduzir Vídeo"
                                    font_name: "assets/fonts/palanquin/palanquindark-regular.ttf"
                                    font_size: "18sp"
                                    theme_text_color: "Custom"
                                    text_color: 0, 0, 0, 1
                                    size_hint: None, None
                                    width: self.texture_size[0]
                                    height: self.texture_size[1]
                                    halign: "left"
                                    valign: "center"
                                    text_size: None, None

                                MDLabel:
                                    text: "Escolher um vídeo"
                                    font_name: "assets/fonts/palanquin/palanquin-semibold.ttf"
                                    font_size: "12sp"
                                    theme_text_color: "Custom"
                                    text_color: 0, 0, 0, 1
                                    size_hint: None, None
                                    width: self.texture_size[0]
                                    height: self.texture_size[1]
                                    halign: "left"
                                    valign: "center"
                                    text_size: None, None
                                    padding_x: "10dp"

                        MDLabel:
                            text: "Selecione um vídeo da galeria para traduzir Libras para português."
                            font_name: "assets/fonts/palanquin/palanquin-medium.ttf"
                            font_size: "14sp"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                            halign: "center"
                            pos_hint: {"center_x": 0.5}

                MDCard:
                    id: card_alfabeto
                    size_hint: 0.9, None
                    height: "140dp"
                    pos_hint: {"center_x": 0.5}
                    elevation: 0
                    radius: [15]
                    md_bg_color: 0.965, 0.972, 0.996, 1
                    line_color: 0.788, 0.835, 0.941, 1
                    line_width: "1dp"

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: "12dp"
                        spacing: "8dp"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        size_hint_y: None
                        height: self.minimum_height

                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint: None, None
                            size: self.minimum_size
                            spacing: 8
                            pos_hint: {"center_x": 0.5}

                            MDIcon:
                                icon: "book"
                                size_hint: None, None
                                size: "24dp", "24dp"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                pos_hint: {"center_y": 0.5}

                            MDBoxLayout:
                                orientation: "vertical"
                                size_hint: None, None
                                size: self.minimum_size
                                spacing: -5
                                pos_hint: {"center_y": 0.5}

                                MDLabel:
                                    text: "Traduzir Alfabeto"
                                    font_name: "assets/fonts/palanquin/palanquindark-regular.ttf"
                                    font_size: "18sp"
                                    theme_text_color: "Custom"
                                    text_color: 0, 0, 0, 1
                                    size_hint: None, None
                                    width: self.texture_size[0]
                                    height: self.texture_size[1]
                                    halign: "left"
                                    valign: "center"
                                    text_size: None, None

                        MDLabel:
                            text: "Tradução de algumas letras do alfabeto de Libras para o português: A, B, C, D, E, F, G, I, L, M, N, O, P, Q, R, S, T, U, V, W."
                            font_name: "assets/fonts/palanquin/palanquin-medium.ttf"
                            font_size: "14sp"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                            halign: "center"
                            pos_hint: {"center_x": 0.5}
        MDBoxLayout:
            size_hint_y: None
            height: "70dp"
            pos_hint: {"bottom": 0}
            md_bg_color: 0.965, 0.972, 0.996, 1
            spacing: "0dp"
            padding: "0dp"

            MDFloatLayout:
                MDIconButton:
                    icon: "home"
                    pos_hint: {"center_x": 0.5, "center_y": 0.7}
                    theme_text_color: "Custom"
                    text_color: 0.718, 0.780, 0.922, 1
                MDLabel:
                    text: "Início"
                    font_size: "12sp"
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    theme_text_color: "Custom"
                    text_color: 0.718, 0.780, 0.922, 1

            MDFloatLayout:
                MDIconButton:
                    icon: "gesture"
                    pos_hint: {"center_x": 0.5, "center_y": 0.7}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1            
                MDLabel:
                    text: "Traduzir Sinais"
                    font_size: "12sp"
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1

            MDFloatLayout:
                MDIconButton:
                    icon: "video"
                    pos_hint: {"center_x": 0.5, "center_y": 0.7}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1
                MDLabel:
                    text: "Traduzir Vídeo"
                    font_size: "12sp"
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1

            MDFloatLayout:
                MDIconButton:
                    icon: "account"
                    pos_hint: {"center_x": 0.5, "center_y": 0.7}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1
                    on_release: root.go_to_profile()
                MDLabel:
                    text: "Perfil"
                    font_size: "12sp"
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1