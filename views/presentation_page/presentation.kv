<PresentationScreen>:
    MDBoxLayout:
        id: presentation_screen
        orientation: 'vertical'
        size: self.size

        canvas.before:
            Color:
                rgba: 183/255, 199/255, 235/255, 1  
            Rectangle:
                pos: self.pos
                size: self.size

        MDAnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            FitImage:
                source: "assets/images/SinalizAI.png"
                size_hint: None, None
                size: 300, 412
