<WelcomeScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1 

        MDTopAppBar:
            md_bg_color: 0.718, 0.780, 0.922, 1 
            pos_hint: {"top": 1}
            elevation: 0
            size_hint_y: None
            height: "56dp"

            title: "[b][font=views/assets/fonts/PT_Serif/PTSerif-Bold.ttf][color=#000000][size=30]Sinaliz[/size][/color][/font] [font=views/assets/fonts/PT_Serif/PTSerif-Regular.ttf][color=#FFFFFF][size=30]AI[/size][/color][/font][/b]"
            specific_text_color: 1, 1, 1, 1

        FitImage:
            id: intro_image
            source: "views/assets/images/welcome_image.jpg"
            size_hint: None, None
            size: "300dp", "280dp"
            pos_hint: {"center_x": 0.5}
            y: self.parent.height - self.height - 80
            radius: 8

        MDBoxLayout:
            id: info_box
            orientation: "vertical"
            size_hint: 1, None  
            height: "60dp" 
            pos_hint: {"center_x": 0.5}
            y: intro_image.y - self.height  - 2
            padding: "10dp" 
            spacing: "7dp"  

            canvas.before:
                Color:
                    rgba: 0.933, 0.941, 0.98, 1  
                Rectangle:
                    pos: self.pos
                    size: self.size
                    

            MDLabel:
                text: "Quebre barreiras na comunicação!"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                font_size: "12sp"
                halign: "center" 
                valign: "middle"  
                text_size: self.width, None  
                shorten: True  
                size_hint_y: None
                height: self.texture_size[1]  
                font_name: "views/assets/fonts/palanquin/palanquindark-regular.ttf"
                
            MDLabel:
                text: "Traduza Libras para o português em tempo real."
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                font_size: "12sp"
                halign: "center"  
                valign: "middle"  
                text_size: self.width, None 
                shorten: True  
                size_hint_y: None
                height: self.texture_size[1] 
                font_name: "views/assets/fonts/palanquin/palanquindark-regular.ttf"

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.9, None  
            height: self.minimum_height
            pos_hint: {"center_x": 0.5}
            y: info_box.y - self.height   
            spacing: 15  

            MDLabel:
                text: "Para começar:"
                font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                font_size: "14sp"
                halign: "left"
                size_hint_y: None
                height: "25dp"

            MDFillRoundFlatButton:
                id: conta_button
                text: "Já tenho uma conta"
                size_hint_x: 1
                md_bg_color: 0.788, 0.835, 0.941, 1 
                font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                elevation: 4  
                line_color: 0.6, 0.7, 0.9, 1 
                line_width: 1
                on_release: root.go_to_login()  # Ação de transição para a tela de login
                


            MDFillRoundFlatButton:
                id: criar_button  
                text: "Criar uma conta"
                size_hint_x: 1
                md_bg_color: 1, 1, 1, 1  
                font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                elevation: 4  
                line_color: 0.8, 0.8, 0.8, 1 
                line_width: 1
                on_release: root.go_to_register()  

            MDBoxLayout:
                size_hint: 1, None
                height: "60dp"  
                spacing: "10dp"
                padding: "10dp"
                pos_hint: {"center_x": 0.5}  

                MDCheckbox:
                    id: checkbox_termos
                    size_hint: None, None
                    size: "30dp", "20dp"
                    active: False
                    color: 0.788, 0.835, 0.941, 1 
                    color_active: 0.788, 0.835, 0.941, 1 
                    pos_hint: {"center_y": 1.01}  

                MDLabel:
                    text: "Eu aceito os [ref=terms][b][color=B7C7EB]Termos de Serviço[/color][/b][/ref] e a [ref=policy][b][color=B7C7EB]Política de Privacidade[/color][/b][/ref]."
                    markup: True
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    font_size: "13sp"
                    font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                    halign: "left"
                    valign: "center"
                    pos_hint: {"center_y": 1.01}
                    height: self.texture_size[1]
                    text_size: self.width, None
                    on_ref_press:
                        if args[1] == "terms": root.go_to_terms()
                        if args[1] == "policy": root.go_to_policy()


