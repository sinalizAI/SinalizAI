<ForgotScreen>:
    MDFloatLayout:
        id: forgot_screen_layout
        md_bg_color: 237/255, 241/255, 250/255, 1

        MDBoxLayout:
            id: main_box
            orientation: 'vertical'
            size_hint: 0.95, 0.9  
            pos_hint: {"center_x": 0.5, "center_y": 0.5}  
            spacing: "20dp"  
            padding: ["10dp", "20dp", "10dp", "20dp"] 

            MDLabel:
                id: title_label
                text: "Esqueceu a senha?"
                font_size: "24sp"
                theme_text_color: "Custom"
                text_color: 0.72, 0.78, 0.92, 1  
                font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                size_hint_y: None
                height: "50dp"
                halign: 'left'

            MDLabel:
                id: subtitle_label
                text: "Confirme o seu e-mail e receba um link para redefini-la."
                font_size: "16sp"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                size_hint_y: None
                height: "40dp"
                halign: 'left'

            MDBoxLayout:
                id: email_box
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "3dp"
                padding: "8dp"

                MDLabel:
                    id: email_label
                    text: "E-MAIL"
                    font_size: "14sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: forgot_input
                    hint_text: "Digite seu e-mail"
                    font_size: "18sp"  
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1  
                    line_color_focus: 0.72, 0.78, 0.92, 1   
                    size_hint_x: 1  
                    height: "55dp"  
                    radius: [15, 15, 15, 15]  

            Widget:
                id: spacer
                size_hint_y: 1

        MDBoxLayout:
            id: button_box
            orientation: 'vertical'
            size_hint_x: 0.9
            size_hint_y: None
            height: "120dp"  
            spacing: "10dp"
            pos_hint: {"center_x": 0.5, "y": 0.01}  

            MDFillRoundFlatButton:
                id: send_button
                text: "[b]Enviar[/b]"
                size_hint_x: 1
                height: "50dp"  
                md_bg_color: 0.717, 0.780, 0.922, 1
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                elevation: 7
                line_color: 0.717, 0.780, 0.922, 1
                line_width: 1
                radius: [12, 12]
                on_release: root.send_reset_email()  

            MDFillRoundFlatButton:
                id: back_button
                text: "[b]Voltar[/b]"
                size_hint_x: 1
                height: "50dp"  
                md_bg_color: 1, 1, 1, 1  
                theme_text_color: "Custom"
                text_color: 0.717, 0.780, 0.922, 1
                elevation: 7
                line_color: 0.717, 0.780, 0.922, 1
                line_width: 1
                radius: [12, 12]
                on_release: root.go_to_back()
