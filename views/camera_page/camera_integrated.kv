<CameraScreen>:
    name: 'camera'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 0, 0, 0, 1


        MDTopAppBar:
            title: "SinalizAI - Detecção LIBRAS"
            md_bg_color: 0.718, 0.780, 0.922, 1
            size_hint_y: None
            height: "56dp"
            left_action_items: [["arrow-left", lambda x: root.go_back()]]


        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            padding: "10dp"


            MDLabel:
                id: status_label
                text: "Pressione o botão para iniciar a câmera"
                font_size: "16sp"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                size_hint_y: None
                height: "40dp"


            MDCard:
                size_hint: 1, 1 
                md_bg_color: 0.1, 0.1, 0.1, 1
                radius: [10]
                elevation: 5

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: "5dp"


                    Image:
                        id: camera_image
                        allow_stretch: True
                        keep_ratio: True
                        size_hint: 1, 1


                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: 1, 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                        MDIcon:
                            icon: "camera-outline"
                            font_size: "80sp"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 0.5, 0.5, 0.5, 1
                            size_hint_y: None
                            height: "100dp"

                        MDLabel:
                            text: "Câmera desconectada"
                            font_size: "18sp"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 0.7, 0.7, 0.7, 1
                            size_hint_y: None
                            height: "30dp"


            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: "60dp"
                spacing: "20dp"
                pos_hint: {"center_x": 0.5}

                Widget:


                MDRaisedButton:
                    id: camera_button
                    text: "Iniciar Câmera"
                    md_bg_color: 0.718, 0.780, 0.922, 1
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    size_hint: None, None
                    size: "200dp", "50dp"
                    font_size: "16sp"
                    elevation: 3
                    on_release: root.toggle_camera()

                Widget:


            MDCard:
                size_hint_y: None
                height: "100dp"
                md_bg_color: 0.718, 0.780, 0.922, 0.1
                radius: [10]
                elevation: 2

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: "15dp"
                    spacing: "5dp"

                    MDLabel:
                        text: " DICAS:"
                        font_size: "14sp"
                        theme_text_color: "Custom"
                        text_color: 0.718, 0.780, 0.922, 1
                        size_hint_y: None
                        height: "20dp"

                    MDLabel:
                        text: " Posicione sua mão bem visível na frente da câmera\\n Mantenha boa iluminação\\n Aguarde o reconhecimento aparecer na tela"
                        font_size: "12sp"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 0.8
                        text_size: self.width - dp(20), None
                        size_hint_y: None
                        height: "60dp"