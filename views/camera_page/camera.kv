<CameraScreen>:
    name: 'camera'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 237/255, 241/255, 250/255, 1  # #EDF1FA

        # Barra superior com botão X
        MDTopAppBar:
            title: "Detecção LIBRAS"
            md_bg_color: 183/255, 199/255, 235/255, 1  # #B7C7EB
            size_hint_y: None
            height: "56dp"
            left_action_items: [["close", lambda x: root.go_back()]]
            theme_text_color: "Custom"
            specific_text_color: 1, 1, 1, 1
            elevation: 0

        # ScrollView para mobile
        MDScrollView:
            size_hint: 1, 1
            do_scroll_x: False

            # Conteúdo principal adaptado para mobile
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: "20dp"
                spacing: "20dp"

                # Status da detecção (compacto para mobile)
                MDLabel:
                    id: status_label
                    text: "Detecção ativa"
                    font_size: "20sp"
                    font_name: "Roboto-Bold"
                    halign: "center"
                    valign: "middle"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.1, 0.1, 1
                    size_hint_y: None
                    height: "40dp"

                # Card de instruções (otimizado para mobile)
                MDCard:
                    size_hint_y: None
                    height: "180dp"
                    md_bg_color: 219/255, 227/255, 245/255, 1  # #DBE3F5
                    radius: [12]
                    elevation: 0

                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: "20dp"
                        spacing: "15dp"

                        MDLabel:
                            text: "INSTRUÇÕES"
                            font_size: "16sp"
                            font_name: "Roboto-Bold"
                            halign: "center"
                            valign: "middle"
                            theme_text_color: "Custom"
                            text_color: 0.1, 0.1, 0.1, 1
                            size_hint_y: None
                            height: "25dp"

                        MDLabel:
                            id: instructions_label
                            text: "A janela da câmera foi aberta\nPosicione sua mão na frente da câmera\nAs letras aparecerão na janela\nPressione Q para fechar"
                            font_size: "13sp"
                            halign: "center"
                            valign: "middle"
                            theme_text_color: "Custom"
                            text_color: 0.2, 0.2, 0.2, 1
                            text_size: self.width - dp(40), None
                            size_hint_y: None
                            height: "80dp"
                            line_height: 1.3

                        MDLabel:
                            id: info_label
                            text: "Sistema funcionando"
                            font_size: "12sp"
                            halign: "center"
                            valign: "middle"
                            theme_text_color: "Custom"
                            text_color: 0.1, 0.6, 0.1, 1
                            size_hint_y: None
                            height: "20dp"

                # Espaçador pequeno
                Widget:
                    size_hint_y: None
                    height: "20dp"

                # Botão principal (adaptado para mobile)
                MDRaisedButton:
                    id: camera_button
                    text: "Parar Detecção"
                    font_size: "14sp"
                    font_name: "Roboto-Medium"
                    md_bg_color: 183/255, 199/255, 235/255, 1  # #B7C7EB
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    size_hint: None, None
                    size: "160dp", "42dp"
                    pos_hint: {"center_x": 0.5}
                    elevation: 0
                    radius: [18]
                    on_release: root.toggle_camera()

                # Espaçador pequeno
                Widget:
                    size_hint_y: None
                    height: "15dp"

                # Botão voltar (compacto)
                MDFlatButton:
                    text: "Voltar"
                    font_size: "13sp"
                    theme_text_color: "Custom"
                    text_color: 183/255, 199/255, 235/255, 1
                    size_hint: None, None
                    size: "80dp", "35dp"
                    pos_hint: {"center_x": 0.5}
                    on_release: root.go_back()

                # Espaçador final pequeno
                Widget:
                    size_hint_y: None
                    height: "20dp"
