<ConfirmationScreen>:
    MDFloatLayout:
        md_bg_color: 237/255, 241/255, 250/255, 1

        MDIconButton:
            id: "icon_close"
            icon: "close"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            pos_hint: {"left": 1, "top": 1}
            size_hint: None, None
            size: dp(40), dp(40)

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'center_x': 0.5, 'center_y': 0.6} 
            spacing: dp(5) 

            MDIcon:
                icon: "email-outline"
                theme_text_color: "Custom"
                text_color: 0.717, 0.780, 0.921, 1
                font_size: "70sp"
                pos_hint: {"center_x": 0.5}
                size_hint: None, None
                size: dp(70), dp(70)  

            MDLabel:
                text: "Verifique seu e-mail!"
                halign: "center"
                theme_text_color: "Primary"
                font_size: "24sp"
                font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: dp(5)  

            MDLabel:
                text: "Enviamos uma mensagem para\n'email-do-usu√°rio'."
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                font_size: "16sp"
                font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: dp(5)  

        MDFillRoundFlatButton:
            id: "reen_button"
            text: "Reenviar E-mail"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5, "y": 0.05}
            md_bg_color: 0.788, 0.835, 0.941, 1
            font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            elevation: 4  
            line_color: 0.6, 0.7, 0.9, 1
            line_width: 1