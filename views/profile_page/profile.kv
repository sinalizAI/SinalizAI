<ProfileScreen>:
    id: Profile_screen
    name: "profile"
    user_image_source: "assets/images/perfil_semfoto.png"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDScrollView:
            id: profile_scroll_view
            size_hint: 1, None
            height: self.parent.height - dp(70)
            pos_hint: {"top": 1}

            MDBoxLayout:
                id: profile_content_box
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "15dp"
                spacing: "10dp"

                MDBoxLayout:
                    id: profile_header_box
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(180)
                    spacing: "3dp"
                    padding: "8dp"
                    pos_hint: {"center_x": 0.5}

                    MDCard:
                        id: profile_image_card
                        size_hint: None, None
                        size: dp(90), dp(90)
                        pos_hint: {"center_x": 0.5}
                        elevation: 0
                        radius: [45, 45, 45, 45]
                        md_bg_color: 0.95, 0.95, 0.95, 1

                        FitImage:
                            id: profile_image
                            source: root.user_image_source
                            radius: [45, 45, 45, 45]

                    MDLabel:
                        id: profile_username_label
                        text: "Olá, Nome do usuário"
                        halign: "center"
                        font_name: "assets/fonts/palanquin/palanquin-bold.ttf"
                        font_size: "15sp"
                        height: self.texture_size[1]

                MDGridLayout:
                    cols: 2
                    size_hint: 0.9, None
                    adaptive_height: True
                    spacing: "6dp"
                    padding: "3dp"
                    pos_hint: {"center_x": 0.5}

                    MDCard:
                        id: edit_profile_card
                        radius: [10]
                        elevation: 0
                        size_hint_y: None
                        height: dp(85)
                        md_bg_color: 0.878, 0.898, 0.976, 1
                        on_release: root.go_to_edit()
                        padding: "4dp"

                        BoxLayout:
                            orientation: "vertical"
                            spacing: "1dp"
                            padding: ["0dp", "8dp", "0dp", "8dp"]  
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint: {"center_y": 0.5}

                            MDIcon:
                                icon: "pencil"
                                size_hint_y: None
                                height: "22dp"
                                pos_hint: {"center_x": 0.5}

                            MDLabel:
                                text: "Editar Perfil"
                                halign: "center"
                                font_size: "13sp"  
                                size_hint_y: None
                                height: self.texture_size[1]

                    MDCard:
                        id: about_us_card
                        radius: [10]
                        elevation: 0
                        size_hint_y: None
                        height: dp(85)
                        md_bg_color: 0.878, 0.898, 0.976, 1
                        on_release: root.go_to_about()
                        padding: "4dp"

                        BoxLayout:
                            orientation: "vertical"
                            spacing: "1dp"
                            padding: ["0dp", "8dp", "0dp", "8dp"]  
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint: {"center_y": 0.5}

                            MDIcon:
                                icon: "human-greeting-variant"
                                size_hint_y: None
                                height: "22dp"
                                pos_hint: {"center_x": 0.5}

                            MDLabel:
                                text: "Quem Somos"
                                halign: "center"
                                font_size: "13sp" 
                                size_hint_y: None
                                height: self.texture_size[1]

                MDLabel:
                    id: help_section_label
                    text: "Ajuda"
                    halign: "center"
                    font_name: "assets/fonts/palanquin/palanquin-bold.ttf"
                    font_size: "15sp"
                    theme_text_color: "Primary"
                    height: self.texture_size[1]
                    padding: "5dp"

                MDGridLayout:
                    id: help_options_grid
                    cols: 2
                    size_hint: 0.9, None
                    adaptive_height: True
                    spacing: "6dp"
                    padding: "3dp"
                    pos_hint: {"center_x": 0.5}

                    MDCard:
                        id: faq_card
                        radius: [10]
                        elevation: 0
                        size_hint_y: None
                        height: dp(85)
                        md_bg_color: 0.878, 0.898, 0.976, 1
                        on_release: root.go_to_faq()
                        padding: "4dp"

                        BoxLayout:
                            orientation: "vertical"
                            spacing: "1dp"
                            padding: ["0dp", "8dp", "0dp", "8dp"]  
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint: {"center_y": 0.5}

                            MDIcon:
                                icon: "comment-question"
                                size_hint_y: None
                                height: "22dp"
                                pos_hint: {"center_x": 0.5}

                            MDLabel:
                                text: "Perguntas Frequentes"
                                halign: "center"
                                font_size: "13sp"  
                                size_hint_y: None
                                height: self.texture_size[1]

                    MDCard:
                        id: terms_card
                        radius: [10]
                        elevation: 0
                        size_hint_y: None
                        height: dp(85)
                        md_bg_color: 0.878, 0.898, 0.976, 1
                        on_release: root.go_to_terms()
                        padding: "4dp"

                        BoxLayout:
                            orientation: "vertical"
                            spacing: "1dp"
                            padding: ["0dp", "8dp", "0dp", "8dp"]  
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint: {"center_y": 0.5}

                            MDIcon:
                                icon: "file-document"
                                size_hint_y: None
                                height: "22dp"
                                pos_hint: {"center_x": 0.5}

                            MDLabel:
                                text: "Termo de Uso"
                                halign: "center"
                                font_size: "13sp"  
                                size_hint_y: None
                                height: self.texture_size[1]

                    MDCard:
                        id: feedback_card
                        radius: [10]
                        elevation: 0
                        size_hint_y: None
                        height: dp(85)
                        md_bg_color: 0.878, 0.898, 0.976, 1
                        on_release: root.go_to_feedback()
                        padding: "4dp"

                        BoxLayout:
                            orientation: "vertical"
                            spacing: "1dp"
                            padding: ["0dp", "8dp", "0dp", "8dp"] 
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint: {"center_y": 0.5}

                            MDIcon:
                                icon: "account-multiple-plus"
                                size_hint_y: None
                                height: "22dp"
                                pos_hint: {"center_x": 0.5}

                            MDLabel:
                                text: "Dar Feedback"
                                halign: "center"
                                font_size: "13sp"  
                                size_hint_y: None
                                height: self.texture_size[1]

                    MDCard:
                        id: privacy_card
                        radius: [10]
                        elevation: 0
                        size_hint_y: None
                        height: dp(85)
                        md_bg_color: 0.878, 0.898, 0.976, 1
                        on_release: root.go_to_policy()
                        padding: "4dp"

                        BoxLayout:
                            orientation: "vertical"
                            spacing: "1dp"
                            padding: ["0dp", "8dp", "0dp", "8dp"]  
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint: {"center_y": 0.5}

                            MDIcon:
                                icon: "shield-lock"
                                size_hint_y: None
                                height: "22dp"
                                pos_hint: {"center_x": 0.5}

                            MDLabel:
                                text: "Política de Privacidade"
                                halign: "center"
                                font_size: "13sp"  
                                size_hint_y: None
                                height: self.texture_size[1]

                Widget:
                    size_hint_y: None
                    height: "20dp"  

                MDFillRoundFlatButton:
                    id: logout_button
                    text: "[b]Sair[/b]"
                    size_hint_x: 0.9
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: 0.976, 0.878, 0.878, 1
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1
                    elevation: 4
                    icon: "logout"
                    icon_color: 1, 0, 0, 1
                    on_release: root.confirmar_saida()
                    height: dp(45)
                    padding: "8dp"

                Widget:
                    size_hint_y: None
                    height: "10dp"  

                MDFillRoundFlatButton:
                    id: delete_data_button
                    text: " [b]Excluir Dados[/b]"
                    size_hint_x: 0.9
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: 0.9, 0.9, 0.94, 1
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1
                    elevation: 4
                    icon: "delete"
                    icon_color: 0.2, 0.2, 0.2, 1
                    height: dp(45)
                    padding: "8dp"
                    on_release: root.confirmar_exclusao_dados()

                Widget:
                    size_hint_y: None
                    height: "15dp" 

                MDLabel:
                    id: version_label
                    text: "V.1.0.0"
                    halign: "center"
                    font_size: "11sp"
                    theme_text_color: "Secondary"
                    padding: "5dp"

        MDBoxLayout:
            size_hint_y: None
            height: "70dp"
            pos_hint: {"bottom": 0}
            md_bg_color: 0.965, 0.972, 0.996, 1
            spacing: "0dp"
            padding: "0dp"

            MDFloatLayout:
                MDIconButton:
                    icon: "home"
                    pos_hint: {"center_x": 0.5, "center_y": 0.7}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1
                    on_release: root.go_to_home()
                MDLabel:
                    text: "Início"
                    font_size: "12sp"
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1


            MDFloatLayout:
                MDIconButton:
                    icon: "gesture"
                    pos_hint: {"center_x": 0.5, "center_y": 0.7}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1
                MDLabel:
                    text: "Traduzir Palavras"
                    font_size: "12sp"
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1

            MDFloatLayout:
                MDIconButton:
                    icon: "alphabetical"
                    pos_hint: {"center_x": 0.5, "center_y": 0.7}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1
                    size: "32dp", "32dp"
                MDLabel:
                    text: "Traduzir Alfabeto"
                    font_size: "12sp"
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1

            MDFloatLayout:
                MDIconButton:
                    icon: "account"
                    pos_hint: {"center_x": 0.5, "center_y": 0.7}
                    theme_text_color: "Custom"
                    text_color: 0.718, 0.780, 0.922, 1
                MDLabel:
                    text: "Perfil"
                    font_size: "12sp"
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    theme_text_color: "Custom"
                    text_color: 0.718, 0.780, 0.922, 1