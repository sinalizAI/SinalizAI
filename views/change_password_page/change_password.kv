<ChangePasswordScreen>:
    id: cp_screen
    MDFloatLayout:
        id: cp_layout
        md_bg_color: 237/255, 241/255, 250/255, 1

        MDIconButton:
            id: cp_btn_close
            icon: "close"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            size_hint: None, None
            size: dp(40), dp(40)
            pos_hint: {'x': 0, 'top': 1}

        MDBoxLayout:
            id: cp_box_title
            orientation: 'horizontal'
            size_hint: None, None
            size: self.minimum_size
            spacing: dp(8)
            pos_hint: {"center_x": 0.5, "top": 0.92}
            padding: [0, 0, 0, "10dp"]

            MDIcon:
                id: cp_icon_password
                icon: "form-textbox-password"
                size_hint: None, None
                size: dp(35), dp(35)
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                pos_hint: {"center_y": 0.5}

            MDLabel:
                id: cp_label_title
                text: "Alterar senha"
                font_size: "24sp"
                font_name: "assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                size_hint: None, None
                size: self.texture_size
                halign: 'left'
                valign: 'center'
                text_size: None, None
                pos_hint: {"center_y": 0.5}

        MDBoxLayout:
            id: cp_box_inputs
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            spacing: "15dp"
            padding: "10dp"
            pos_hint: {"top": 0.8}

            MDBoxLayout:
                id: cp_box_current_pass
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "1dp"
                padding: "1dp"

                MDLabel:
                    id: cp_label_current_pass
                    text: "Senha Atual"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: cp_input_current_pass
                    hint_text: "Digite sua senha atual"
                    hint_text_align: "center"
                    font_size: "9sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "30dp"
                    radius: [12, 12, 12, 12]
                    password: True
                    password_mask: "*"

            MDBoxLayout:
                id: cp_box_new_pass
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "1dp"
                padding: "1dp"

                MDLabel:
                    id: cp_label_new_pass
                    text: "Nova Senha"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: cp_input_new_pass
                    hint_text: "Digite sua nova senha"
                    hint_text_align: "center"
                    font_size: "9sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "30dp"
                    radius: [12, 12, 12, 12]
                    password: True
                    password_mask: "*"

                MDLabel:
                    id: cp_label_pass_hint
                    text: "A senha deve ter de 6 a 14 caracteres"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0.5, 0.5, 0.5, 1
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: ["3dp", 0, 0, 0]

            MDBoxLayout:
                id: cp_box_confirm_pass
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: "1dp"
                padding: "1dp"

                MDLabel:
                    id: cp_label_confirm_pass
                    text: "Confirme a Nova Senha"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: cp_input_confirm_pass
                    hint_text: "Confirme sua nova senha"
                    hint_text_align: "center"
                    font_size: "9sp"
                    mode: "rectangle"
                    line_color_normal: 0.72, 0.78, 0.92, 1
                    line_color_focus: 0.72, 0.78, 0.92, 1
                    size_hint_x: 1
                    height: "30dp"
                    radius: [12, 12, 12, 12]
                    password: True
                    password_mask: "*"

        MDFillRoundFlatButton:
            id: cp_btn_save
            text: "Salvar"
            size_hint_x: 0.98
            height: "50dp"
            md_bg_color: 0.788, 0.835, 0.941, 1
            font_name: "assets/fonts/palanquin/palanquin-regular.ttf"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            elevation: 4
            radius: [12, 12]
            line_color: 0.6, 0.7, 0.9, 1
            line_width: 1
            pos_hint: {"center_x": 0.5, "y": 0.02}