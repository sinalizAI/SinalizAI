<LoginScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDTopAppBar:
            id: top_app_bar
            md_bg_color: 0.718, 0.780, 0.922, 1
            pos_hint: {"top": 1}
            elevation: 0
            size_hint_y: None
            height: "56dp"

            title: "[b][font=views/assets/fonts/PT_Serif/PTSerif-Bold.ttf][color=#000000][size=30]Sinaliz[/size][/color][/font] [font=views/assets/fonts/PT_Serif/PTSerif-Regular.ttf][color=#FFFFFF][size=30]AI[/size][/color][/font][/b]"
            specific_text_color: 1, 1, 1, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, None
            height: self.minimum_height
            spacing: "20dp"
            pos_hint: {"center_x": 0.5, "top": 1 - (top_app_bar.height / root.height)}
            padding: "10dp"

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: self.minimum_size
                spacing: 8
                pos_hint: {"center_x": 0.5}

                FitImage:
                    source: "views/assets/images/Image_Hi.png"
                    size_hint: None, None
                    size: 35, 35
                    pos_hint: {"center_y": 0.5}  

                MDLabel:
                    text: "Seja Bem-vindo!"
                    font_size: "24sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    font_name: "views/assets/fonts/Palanquin_Dark/PalanquinDark-Regular.ttf"
                    size_hint: None, None
                    width: self.texture_size[0]
                    height: self.texture_size[1]
                    halign: 'left'
                    valign: 'center'
                    text_size: None, None
                    pos_hint: {"center_y": 0.5}  

            MDLabel:
                text: "Insira seus dados para entrar em sua conta."
                font_size: "14sp"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                size_hint: None, None
                width: self.texture_size[0]
                height: self.texture_size[1]
                halign: 'center'
                valign: 'center'
                text_size: None, None
                pos_hint: {"center_x": 0.5}  

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: 12
                padding: "20dp"  

                MDLabel:
                    text: "E-MAIL"
                    font_size: "14sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {"center_x": 0.55}

                MDTextField:
                    id: email_input
                    hint_text: "Digite seu e-mail"
                    font_size: "16sp"
                    mode: "line"  
                    line_color_normal: 0, 0, 0, 1  
                    line_color_focus: 0, 0, 0, 1  
                    text_color: 0, 0, 0, 1  
                    hint_text_color: 0.5, 0.5, 0.5, 1  
                    font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 0.9

                MDLabel:
                    text: "SENHA"
                    font_size: "14sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    bold: True
                    font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {"center_x": 0.55}

                MDTextField:
                    id: password_input
                    hint_text: "Digite sua senha"
                    font_size: "16sp"
                    mode: "line"  
                    line_color_normal: 0, 0, 0, 1  
                    line_color_focus: 0, 0, 0, 1  
                    text_color: 0, 0, 0, 1  
                    hint_text_color: 0.5, 0.5, 0.5, 1  
                    password: True
                    font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 0.9
                    
                MDTextButton:
                    text: "Esqueci a senha"
                    font_size: "17sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    pos_hint: {"right": 0.95, "top": 0.35}

            MDFillRoundFlatButton:
                id: entrar_button
                text: "Entrar"
                size_hint_x: 1
                md_bg_color: 0.788, 0.835, 0.941, 1 
                font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                elevation: 4  
                line_color: 0.6, 0.7, 0.9, 1 
                line_width: 1 

            MDFillRoundFlatButton:
                id: voltar_button  
                text: "Voltar"
                size_hint_x: 1
                md_bg_color: 1, 1, 1, 1  
                font_name: "views/assets/fonts/palanquin/palanquin-regular.ttf"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                elevation: 4  
                line_color: 0.8, 0.8, 0.8, 1 
                line_width: 1